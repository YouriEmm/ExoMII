        <ul class="chapter-list">
            {% for chapitre in chapitres %}
                <li>
                    <a href="{{ path('chapitre_exercices', { id: chapitre.id }) }}">
                        {{ chapitre.nom }}
                    </a>
                </li>
            {% else %}
                <p>Aucun chapitre disponible pour cette mati√®re.</p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
